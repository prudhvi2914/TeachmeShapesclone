<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="514dp">

        <android.gesture.GestureOverlayView
            android:id="@+id/gesture_overlay_view"
            android:layout_width="match_parent"
            android:layout_height="528dp"
            android:layout_gravity="center"
            android:gestureColor="@color/colorPrimary"
            android:gestureStrokeType="multiple"
            android:uncertainGestureColor="@color/colorPrimary">

            <TextView
                android:id="@+id/tv"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:text="Draw the shape on the particle?!!Yo!!!"
                android:textSize="30sp" />
        </android.gesture.GestureOverlayView>
    </FrameLayout>

    <Button
        android:id="@+id/nextque"
        android:layout_width="411dp"
        android:layout_height="67dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-9dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="80dp"
        android:text="Next Question" />

    <Button
        android:id="@+id/button"
        android:layout_width="104dp"
        android:layout_height="82dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="281dp"
        android:layout_marginBottom="4dp"
        android:text="GetScore" />

</RelativeLayout>